<header class="masthead">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12 text-center">
          <%= image_tag  "Main_logo.png" %>
          <h3 class="font-weight-strong display-5 text-info">Create and Share Workouts</h3>


     <%= link_to "Log-in", {controller: "sessions", action: "new"}, class: "btn btn-danger" %>
     <%= link_to "Sign-up", {controller: "users", action: "new"}, class: "btn btn-success" %>
     <%= link_to "Sign-in with Google", '/auth/google_oauth2', class: "btn btn-primary" %>
        
      </div>
    </div>
  </div>
</header>




<style>
.masthead {
  height: 100vh;
  min-height: 500px;
  background-image: url('https://source.unsplash.com/1600x900/?fitness,people');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
</style>
