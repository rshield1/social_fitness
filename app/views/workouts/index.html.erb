<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form h5-4">
                        <div class="px-2 ">
                          <br>
                          <div class="card text-white bg-dark mb-3">  
                        <div>
                          <h3>Filter posts:</h3>
                          <%= form_tag("/workouts", method: "get") do %>
                            <%= select_tag "date", options_for_select(["Today", "Past"]), include_blank: true %>
                            <%= submit_tag "Filter" %>
                          <% end %>
                        </div>
                            <h3>All of the workouts!</h3>
                          </div>
                          <hr>
                            <% @workouts.each do |w| %>
                            <div class="blk_center row card-deck border-info mb-3">
                            <h3>Name - <%= w.user.username %></h3>
                            <%= check_image(w.user) %>

                            <h5>Title of workout - <%= w.title %></h5>
                            <h5>Description of workout -  <%= w.description %> </h5>
                            <h5>Time of Workout -  <%= w.time %> Minutes</h5>
                            <h5>Difficulty - <%= w.difficulty %>  </h5>
                            <h5>Comments - <%= w.comments.count %>  </h5>
                            <h5>Category - <%= w.category.name %>
                            <br>
                            <%= link_to "Show workout", workout_path(w.id) %>
                            <br>
                            <%= link_to "Edit workout", edit_workout_path(w.id) if w.user_id == session[:user_id] %>
                            <br>
                            <%= link_to "Delete workout", workout_path(w), :confirm => "Are you sure?", :method => :delete if w.user_id == session[:user_id] %>
                            <br>
                            <%= link_to "Add a comment", new_workout_comment_path(w.id) %>
                            </div>
                            <hr>
                            <% end %>
                        

                </div>
                
                
        </div> 
      </div>
</section>



<%= render 'style' %>