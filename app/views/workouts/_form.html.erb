<%= form_for(@workout) do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :time %>
        <%= f.number_field :time, min: 1, max: 120 %>
    </div>

    <div>
        <%= f.label :difficulty %>
        <%= f.number_field :difficulty, min: 1, max: 5 %>
    </div>

    <p>Add A Category:</p>
    <div>
        <%= f.fields_for :category do |m| %>
            <%= m.label :name %>
            <%= m.text_field :name %>
        <datalist id="category_name">
            <% Category.all.each do |c| %>
           <option value = "<%= c.name %>"  ></option>
            <% end %>
        </datalist>
        <br>
        <% end %>
    </div>
        <%= f. submit %>
<% end %>





 