<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="text-primary">All comments for <%= @workout.title %> Workout</h1>
                    <h3 class="text-danger">By <%= @workout.user.username %></h3>
                        <div class="px-2 blk_center row card-deck border-light mb-3">

                        <% @comments.each do |c| %>
                        <h4 class="text-primary"><%= image_tag (c.user.image), size: "50" %><%= c.user.username %> posted: </h4>
                        <p class="text-light"><%= c.content %><p>
                        <p class="text-success"> Created-at <%= c.created_at %></p>
                        <hr>
                       
                        <% end %>
                        <%= link_to  "Add a Comment", new_workout_comment_path(@workout) %>
                    </div>
                </div>
            
        </div>
    </div> 
</section>

<%= render 'workouts/style' %>